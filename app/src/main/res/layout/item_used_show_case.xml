<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_item_case"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_used_show_case"
            android:scaleType="centerCrop"
            android:transitionName="image_car" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_item_case"
            android:background="@drawable/bg_black_information"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_car_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/imageView"
                android:maxLines="1"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:textColor="@android:color/white"
                tools:text="Tyoe Car" />

            <TextView
                android:id="@+id/textView_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_car_brand"
                android:layout_alignParentStart="true"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:text="$130.000" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_medium"
                app:srcCompat="@drawable/ic_heart" />

        </RelativeLayout>

    </RelativeLayout>

</layout>
