<?xml version="1.0" encoding="utf-8"?>
<layout >

    <data>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_item_case"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_used_show_case"
            android:transitionName="image_car"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/side_nav_bar"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/imageView_item_case">

            <TextView
                android:id="@+id/textView_car_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:textColor="@android:color/white"
                android:maxLines="1"
                tools:text="Tyoe Car"
                android:layout_toStartOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_below="@+id/textView_car_brand"
                android:layout_alignParentStart="true"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                tools:text="$130.000"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_medium"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView" />

        </RelativeLayout>

    </RelativeLayout>

</layout>
